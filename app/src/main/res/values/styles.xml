<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="MyTextAppearance.Prime" parent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MyTextAppearance.Prime.Small" parent="MyTextAppearance.Prime">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MyTextAppearance.Prime.Big" parent="MyTextAppearance.Prime">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="MyTextAppearance.Prime.Big.Bold" parent="MyTextAppearance.Prime.Big">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTextAppearance.Gray" parent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="MyTextAppearance.Gray.Big" parent="MyTextAppearance.Gray">
        <item name="android:textSize">20sp</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="generalnotitle" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>   <!-- //this -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary_1</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_1</item>
        <item name="colorAccent">@color/colorPrimary_1</item>
        <item name="colorControlActivated">#33691e</item>
        <item name="colorControlHighlight">#d50000</item>
    </style>

    <style name="Button" parent="android:Widget.Button">
        <item name="android:paddingLeft">@dimen/margin_field_name</item>
        <item name="android:paddingRight">@dimen/margin_field_name</item>
        <item name="android:textColor">@color/colorTextColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>


        <item name="android:textSize">20sp</item>

    </style>

    <style name="ViewSpace" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <!--<item name="android:layout_marginTop">@dimen/margin_view_setting</item>-->
        <!--<item name="android:layout_marginBottom">@dimen/margin_view_setting</item>-->
        <item name="android:background">@color/colorGray</item>

    </style>
    <!--textview begin-->
    <style name="MyTextAppearance.White" parent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="MyTextAppearance.White.Bold" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTextAppearance.Black" parent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyTextAppearance.Black.Small" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyTextAppearance.Red" parent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="MyTextAppearance.Blue" parent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MyTextAppearance.Blue.Small" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="MyTextAppearance.Blue.VeryBig.Bold" parent="MyTextAppearance.Blue.Big.Bold">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="MyTextAppearance.Blue.Big" parent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MyTextAppearance.Blue.Big.Bold" parent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/colorGray</item>
        <item name="android:progressTint">@color/colorPrimaryLight</item>
        <item name="android:colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:colorControlNormal" tools:ignore="DuplicateDefinition">
            @color/colorPrimaryDark
        </item>

    </style>
    <style name="DDialogBuilder" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <!--textview end-->
    <style name="InputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:paddingBottom">@dimen/input_label_vertical_spacing</item>
        <item name="android:paddingLeft">@dimen/input_label_horizontal_spacing</item>
        <item name="android:paddingRight">@dimen/input_label_horizontal_spacing</item>
    </style>
</resources>
